<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #2c3232;
        padding: 20px;
    }

    .form {
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(224, 208, 208, 0.914);
    }

    .input, .textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    #submitbtn {
        background-color: #0077cc;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    #submitbtn:hover {
        background-color: #005fa3;
    }
</style>
<body>
    <!-- <form method="post" action="/posts">      /posts k under chala gya      -->
        <form class="form" method="post" action="/posts">    
        <input  required class="input" type="text" placeholder="enter username" name="username"> <br><br>
        <textarea class="textarea" placeholder="write your post" name="content" id=""></textarea> <br><br>
        <button id="submitbtn">Submit Post</button>
    </form>
</body>
